<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_title"
        style="@style/tv_h5_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Input your friend email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_hint"
        style="@style/tv_body_regular_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Make sure you invite registered friend email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ed_invite_layout"
        style="@style/MyTextInputLayout"
        app:endIconMode="clear_text"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/tv_hint"
        app:layout_constraintEnd_toEndOf="@id/tv_hint"
        app:layout_constraintTop_toBottomOf="@id/tv_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_invite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your friend email"
            android:inputType="textEmailAddress"/>

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>