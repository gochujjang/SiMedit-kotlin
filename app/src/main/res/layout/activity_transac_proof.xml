<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.savings.detail.TransacProofActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_title_proof"
            style="@style/tv_h1_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transaction Proof"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_preview"
            android:layout_width="0dp"
            android:layout_height="550dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_proof"
            app:srcCompat="@drawable/ic_place_holder" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back"
            style="@style/btn_filled_icon"
            android:layout_marginTop="48dp"
            android:text="Back"
            android:textColor="@color/white"
            android:layout_marginHorizontal="22dp"
            app:icon="@drawable/ic_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_preview" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete"
            style="@style/btn_outlined"
            android:layout_marginTop="25dp"
            android:text="Delete this transaction"
            android:textColor="@color/red"
            android:layout_marginHorizontal="22dp"
            app:strokeColor="@color/red"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_back" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>