        <TextView
            android:id="@+id/tv_title_desc"
            style="@style/tv_h5_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/desc_title"
            app:layout_constraintTop_toBottomOf="@id/ed_balance_layout"
            app:layout_constraintStart_toStartOf="@id/ed_balance_layout"
            app:layout_constraintEnd_toEndOf="@id/ed_balance_layout"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_desc_layout"
            style="@style/MyTextInputLayout"
            app:endIconMode="clear_text"
            app:layout_constraintTop_toBottomOf="@id/tv_title_desc"
            app:layout_constraintStart_toStartOf="@id/tv_title_desc"
            app:layout_constraintEnd_toEndOf="@id/tv_title_desc">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/desc_hint"
                android:inputType="textCapSentences"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_transaction"
            android:layout_marginTop="48dp"
            android:text="@string/add_transaction"
            style="@style/btn_filled_icon"
            android:textColor="@color/white"
