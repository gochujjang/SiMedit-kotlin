<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.add.transaction.AddTransactionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/blue"
        android:paddingHorizontal="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="69dp">

        <TextView
            android:id="@+id/title_page"
            style="@style/tv_h3_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_transaction"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            app:tint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/title_page"
            app:layout_constraintBottom_toBottomOf="@id/title_page"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchor="@id/constraint_layout_top"
        app:layout_anchorGravity="bottom"
        android:background="@drawable/bg_rounded_top_1side_20"
        android:layout_marginTop="120dp"
        android:paddingHorizontal="24dp">

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggleButtonGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:singleSelection="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.button.MaterialButton
                style="@style/btn_filled"
                android:id="@+id/btn_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/income"
                />
            <com.google.android.material.button.MaterialButton
                style="@style/btn_outlined"
                android:id="@+id/btn_expenses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expenses"
                />
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <TextView
            android:id="@+id/tv_title_balance"
            style="@style/tv_h5_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="8dp"
            android:text="Balance amount"
            app:layout_constraintTop_toBottomOf="@id/toggleButtonGroup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_balance_layout"
            style="@style/MyTextInputLayout"
            app:layout_constraintTop_toBottomOf="@id/tv_title_balance"
            app:layout_constraintStart_toStartOf="@id/tv_title_balance"
            app:layout_constraintEnd_toEndOf="@id/tv_title_balance"
            app:startIconDrawable="@drawable/resize_icon_rp">

            <id.adiandrea.rupiahedittext.RupiahEditText
                android:id="@+id/ed_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/balance_hint"
                android:inputType="numberDecimal"/>

<!--            <com.google.android.material.textfield.TextInputEditText-->
<!--                android:id="@+id/ed_balance"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:hint="@string/balance_hint"-->
<!--                android:inputType="numberDecimal"/>-->

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_title_date"
            style="@style/tv_h5_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/date_title_transac"
            app:layout_constraintTop_toBottomOf="@id/ed_balance_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_date_layout"
            style="@style/MyTextInputLayout"
            app:layout_constraintTop_toBottomOf="@id/tv_title_date"
            app:layout_constraintStart_toStartOf="@id/tv_title_date"
            app:layout_constraintEnd_toEndOf="@id/tv_title_date"
            app:startIconDrawable="@drawable/ic_calendar"
            app:startIconTint="@color/grey_dark">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/date_hint"
                android:ems="10"
                android:focusable="false"
                android:inputType="none"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_title_desc"
            style="@style/tv_h5_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/desc_title"
            app:layout_constraintTop_toBottomOf="@id/ed_date_layout"
            app:layout_constraintStart_toStartOf="@id/ed_date_layout"
            app:layout_constraintEnd_toEndOf="@id/ed_date_layout"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_desc_layout"
            style="@style/MyTextInputLayout"
            app:endIconMode="clear_text"
            app:layout_constraintTop_toBottomOf="@id/tv_title_desc"
            app:layout_constraintStart_toStartOf="@id/tv_title_desc"
            app:layout_constraintEnd_toEndOf="@id/tv_title_desc">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/desc_hint"
                android:inputType="textCapSentences"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_transaction"
            android:layout_marginTop="48dp"
            android:text="@string/add_transaction"
            style="@style/btn_filled_icon"
            android:textColor="@color/white"
            app:icon="@drawable/ic_add"
            app:layout_constraintStart_toStartOf="@id/ed_desc_layout"
            app:layout_constraintTop_toBottomOf="@id/ed_desc_layout"
            app:layout_constraintEnd_toEndOf="@id/ed_desc_layout"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>

